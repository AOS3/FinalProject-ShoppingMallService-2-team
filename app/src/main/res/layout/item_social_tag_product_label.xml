<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:background="@drawable/background_tag_label">

    <!-- 상품 이미지 -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_tag_product_label_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

    <!-- 상품 정보 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- 상품명 -->
        <TextView
            android:id="@+id/tv_tag_product_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 상품 가격 -->
        <TextView
            android:id="@+id/tv_tag_product_label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999,999원"
            android:textSize="10sp"
             />
    </LinearLayout>

    <!-- 삭제 버튼 -->
    <TextView
        android:id="@+id/tv_tag_product_label_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="삭제"
        android:textSize="10sp"
        android:textColor="@android:color/holo_red_dark"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
