<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    android:gravity="center">

    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 확정 하시겠습니까?"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:textStyle="bold"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_order_history_product_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="취소"
            android:layout_marginEnd="10dp"
            android:textColor="#332828"
            android:textAppearance="@style/AppTextLabel.S14.Bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp" />

        <Button
            android:id="@+id/btn_order_history_product_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:backgroundTint="#332828"
            android:text="확인"
            android:layout_marginEnd="10dp"
            android:textColor="#ffffff"
            android:textAppearance="@style/AppTextLabel.S14.Bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp" />
    </LinearLayout>
</LinearLayout>
