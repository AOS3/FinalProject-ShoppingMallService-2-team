<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Chip 스타일  -->
    <style name="AppChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">18sp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  이미지 스타일  -->
    <style name="AppRoundedImage" >
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="AppRoundedImage.Medium" >
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppRoundedImage.Circle" >
        <item name="cornerSize">50%</item>
    </style>

    <!--  텍스트 스타일  -->
    <style name="AppToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brown_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextLabel">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextLabel.S10">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextLabel.S14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextLabel.S10.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextLabel.S14.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppPopupTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!--  뷰페이저 탭 인디케이터 스타일  -->
    <style name="AppTabIndicatorStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/selector_tab_indicator</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <!--  카테고리 탭 인디케이터 스타일  -->
    <style name="AppTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <!--  바텀 네비게이션 스타일  -->
    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">56dp</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconPadding">5dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemPaddingBottom">10dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!--  구분선  -->
    <style name="AppDivider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/gray_200</item>
        <item name="dividerThickness">0.7dp</item>
    </style>

    <!-- 둥근 모서리 -->
    <style name="RoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <!--팔로잉 버튼 서식-->
    <style name="FollowingButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#818080</item> <!-- 테두리 색상 -->
        <item name="strokeWidth">1dp</item> <!-- 테두리 두께 -->
        <item name="cornerRadius">5dp</item> <!-- 모서리 둥글게 -->
        <item name="backgroundTint">#DFDFDF</item> <!-- 버튼 배경색 -->
        <item name="android:textColor">#58443B</item> <!-- 글자색 -->
    </style>

    <!--팔로우 버튼 서식-->
    <style name="FollowButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item> <!-- 모서리 둥글게 -->
        <item name="backgroundTint">#332828</item> <!-- 버튼 배경색 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 글자색 -->
    </style>

    <!--EditText 밑줄 숨기기-->
    <style name="NoUnderlineEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#000000</item> <!-- 검정색 텍스트 -->
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/brown_500</item>
        <item name="colorControlActivated">@color/brown_800</item>
        <item name="hintTextColor">@color/brown_500</item>
        <item name="android:textColorHint">@color/brown_500</item>
        <item name="cursorColor">@color/brown_800</item>
    </style>
</resources>